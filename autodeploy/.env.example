# AutoDeployX Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# =============================================
# DATABASE CONFIGURATION
# =============================================
DB_PASSWORD=your_secure_database_password_here
POSTGRES_USER=autodeployx
POSTGRES_DB=autodeployx

# =============================================
# JENKINS CI/CD CONFIGURATION
# =============================================
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your_jenkins_api_token_here
JENKINS_JOB_NAME=autodeployx-backend

# How to get Jenkins API token:
# 1. Log into Jenkins → User menu → Configure
# 2. Under "API Token" section, click "Add new Token"
# 3. Copy the generated token here

# =============================================
# DOCKER HUB CONFIGURATION
# =============================================
DOCKERHUB_USER=your_dockerhub_username
DOCKERHUB_REPO=autodeployx
DOCKERHUB_TOKEN=your_dockerhub_access_token

# How to get DockerHub access token:
# 1. Log into hub.docker.com → Account Settings → Security
# 2. Click "New Access Token"
# 3. Copy the generated token here

# =============================================
# KUBERNETES/MINIKUBE CONFIGURATION
# =============================================
K8S_NAMESPACE=default
K8S_DEPLOYMENT_NAME=autodeployx-app
MINIKUBE_PROFILE=minikube

# =============================================
# FEATURE FLAGS
# =============================================
# Set to 'true' to enable real Jenkins API calls (requires valid token)
ENABLE_REAL_JENKINS=false

# Set to 'true' to enable real Kubernetes deployments
ENABLE_REAL_K8S=false

# =============================================
# FRONTEND CONFIGURATION
# =============================================
VITE_BACKEND_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
